generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])

  @@index([authorId])
}

model TokenBlacklist {
  id        String   @id @default(cuid())
  jti       String   @unique // JWT ID (jti claim)
  expiresAt DateTime // 应与原始 JWT 的过期时间一致

  createdAt DateTime @default(now())
}

model RefreshToken {
  id          String   @id @default(cuid())
  hashedToken String   @unique // 存储刷新令牌的哈希值
  revoked     Boolean  @default(false) // 标记为已撤销，或直接删除记录
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade) // 级联删除
  createdAt   DateTime @default(now())
  expiresAt   DateTime // 刷新令牌的过期时间
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id        String   @id @default(cuid()) // 或者 Int @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  password  Password? // 可选的一对一关系
  refreshTokens RefreshToken[]
  accounts Account[]
  sessions Session[]
  posts  Post[]
}

model Password {
  hash   String
  userId String   @unique // 关联到 User 的 id
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}
